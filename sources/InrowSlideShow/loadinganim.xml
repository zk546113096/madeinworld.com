			<dropshadow>
				<target></target> <!-- specify if the effect must be applied to : 'text','anim','both' || default value is : not set -->
				<distance>10</distance> <!-- Number (default = 4.0) — Offset distance for the shadow, in pixels -->
				<angle>45</angle> <!-- Number (default = 45) — Angle of the shadow, 0 to 360 degrees -->
				<color>0x000000</color> <!-- uint (default = 0x000000) — Color of the shadow, in hexadecimal format -->
				<opacity>0.8</opacity> <!-- Number (default = 1.0) —  transparency value for the shadow color. Valid values are 0.0 to 1.0 -->
