<?xml version="1.0" encoding="utf-8"?>
<loadinganimConfig>
	<anim>
		<type>circle</type> <!-- possible types are : 'Hbar','Vbar','circle','sun' || default value is : Hbar -->
		<size>25;3</size> <!-- 'length;thickness'(if progress bar) or 'radius;thickness'(if circle or sun) || default value is : '50;3'(if progress bar) or '25;3' -->
